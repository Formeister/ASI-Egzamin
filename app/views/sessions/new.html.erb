<% provide(:title, "Logowanie") %>

<%= form_for(:session, html: { class: "form-horizontal"}, url: login_path) do |f| %>
    <fieldset>
      <!-- Form Name -->
      <div class="page-header text-center">
        <h2>Logowanie</h2>
      </div>

      <!-- Text input-->
      <div class="form-group">
        <%= f.label :email, "Adres e-mail", class: "col-md-4 control-label" %>
        <div class="col-md-4">

          <%= f.email_field :email, class: "form-control input-md" %>
          <span class="help-block">Wpisz swój adres e-mail</span>
        </div>
      </div>

      <!-- Password input-->
      <div class="form-group">
        <%= f.label :password, "Hasło", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password, class: "form-control input-md" %>
          <span class="help-block">Hasło do Twojego konta</span>
        </div>
      </div>

      <!-- Remember me-->
      <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
          <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Zapamiętaj na tym komputerze</span>
          <% end %>
        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <div class="col-md-2 col-md-offset-5">
          <%= f.submit "Zaloguj", class: "btn btn-primary btn-block" %>
        </div>
      </div>

    </fieldset>
<% end %>

<div class="row">
  <div class="text-center">
    <p style="font-size: 17px;">Nowy użytkownik? <%= link_to "Zarejestruj się!", signup_path %></p>
  </div>
</div>
